# MANIFEST.in - Specify additional files to include in distribution

# Documentation
include README.md
include LICENSE
include FAIR_COMPLIANCE.md
include IMPLEMENTATION_SUMMARY.md
include NEXT_STEPS.md
include TRANSFORMER_REFORMULATION_PLAN.md

# Metadata
include metadata.yaml
include pyproject.toml

# Configuration files
recursive-include configs *.yaml *.json

# JSON Schemas
recursive-include schemas *.json

# Examples
recursive-include examples *.py *.md
recursive-include examples/reuse_guides *.py *.md

# Documentation
recursive-include docs *.md *.rst *.txt

# Exclude unwanted files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude .git*

# Exclude test and temporary files
exclude .dockerignore
exclude .gitignore
recursive-exclude tests *
recursive-exclude tmp *
recursive-exclude data *
recursive-exclude ops *