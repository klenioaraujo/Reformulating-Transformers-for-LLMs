{
  "psiqrh_evaluation_engine": {
    "version": "1.0.0",
    "description": "Universal evaluation configuration for ΨQRH framework integration with HELM and LM-Eval",
    "author": "Klenio Araujo Padilha",
    "license": "GNU GPLv3",
    "last_updated": "2025-01-15"
  },

  "framework_integration": {
    "supported_frameworks": [
      "helm",
      "lm_eval"
    ],
    "default_framework": "lm_eval",
    "auto_detection": true,
    "fallback_mode": "standalone"
  },

  "psiqrh_model": {
    "core_parameters": {
      "embed_dim": 64,
      "alpha": 1.5,
      "beta": 0.01,
      "quaternion_precision": "float32",
      "energy_conservation_threshold": 0.05
    },

    "padilha_wave_equation": {
      "enable": true,
      "I0": 1.0,
      "omega_base": 1.0,
      "alpha_modulation": true,
      "beta_chirp": true,
      "k_wave_number": true,
      "spatial_modulation": true,
      "temporal_evolution": true
    },

    "fractal_analysis": {
      "enable": true,
      "method": "needle_fractal_dimension",
      "dimension_bounds": [0.5, 3.0],
      "euclidean_reference": 2.0,
      "lambda_scaling": 0.1,
      "automatic_parameter_mapping": true,
      "beta_d_relations": {
        "1d": "3 - 2*D",
        "2d": "5 - 2*D",
        "3d": "7 - 2*D"
      }
    },

    "quaternion_operations": {
      "enable": true,
      "precision": "double",
      "normalize_quaternions": true,
      "energy_conservation": true,
      "stability_threshold": 1e-6,
      "hamilton_product": true,
      "so4_rotations": true,
      "left_right_rotations": true
    },

    "spectral_filtering": {
      "enable": true,
      "filter_type": "logarithmic_phase",
      "alpha_scaling": true,
      "frequency_domain": "fft",
      "epsilon": 1e-8,
      "spectral_regularization": true,
      "phase_preservation": true
    }
  },

  "evaluation_scenarios": {
    "language_understanding": {
      "tasks": [
        "reading_comprehension",
        "natural_language_inference",
        "sentiment_analysis",
        "question_answering"
      ],
      "metrics": ["accuracy", "f1_score", "energy_conservation"],
      "few_shot_examples": 5
    },

    "mathematical_reasoning": {
      "tasks": [
        "arithmetic_reasoning",
        "algebraic_manipulation",
        "geometric_problems",
        "quaternion_algebra"
      ],
      "metrics": ["accuracy", "wave_coherence", "quaternion_stability"],
      "few_shot_examples": 10
    },

    "scientific_knowledge": {
      "tasks": [
        "physics_problems",
        "wave_equations",
        "fractal_geometry",
        "harmonic_analysis"
      ],
      "metrics": ["accuracy", "spectral_fidelity", "fractal_coherence"],
      "few_shot_examples": 8
    },

    "code_understanding": {
      "tasks": [
        "code_generation",
        "bug_detection",
        "algorithm_implementation",
        "mathematical_computing"
      ],
      "metrics": ["functional_correctness", "energy_conservation", "processing_efficiency"],
      "few_shot_examples": 3
    }
  },

  "psiqrh_metrics": {
    "energy_conservation": {
      "description": "Ratio of output to input energy in quaternion space",
      "formula": "||output|| / ||input||",
      "optimal_range": [0.9, 1.1],
      "weight": 0.25,
      "critical": true
    },

    "quaternion_stability": {
      "description": "Stability of quaternion norms during processing",
      "formula": "1 - std(quaternion_norms) / mean(quaternion_norms)",
      "optimal_range": [0.8, 1.0],
      "weight": 0.20,
      "critical": true
    },

    "fractal_coherence": {
      "description": "Consistency of fractal dimension analysis",
      "formula": "1 - abs(fractal_dim - expected_dim) / expected_dim",
      "optimal_range": [0.7, 1.0],
      "weight": 0.15,
      "critical": false
    },

    "spectral_fidelity": {
      "description": "Fidelity of spectral filtering operations",
      "formula": "correlation(input_spectrum, filtered_spectrum)",
      "optimal_range": [0.8, 1.0],
      "weight": 0.15,
      "critical": false
    },

    "wave_coherence": {
      "description": "Coherence of Padilha Wave Equation parameters",
      "formula": "consistency_measure(alpha, beta, omega)",
      "optimal_range": [0.7, 1.0],
      "weight": 0.15,
      "critical": false
    },

    "processing_efficiency": {
      "description": "Computational efficiency of ΨQRH operations",
      "formula": "tokens_per_second / memory_usage_mb",
      "optimal_range": [0.1, 10.0],
      "weight": 0.10,
      "critical": false
    }
  },

  "comparison_baselines": {
    "sota_models": [
      {
        "name": "gpt-4",
        "organization": "openai",
        "model_type": "chat",
        "api_key_env": "OPENAI_API_KEY"
      },
      {
        "name": "claude-3-opus",
        "organization": "anthropic",
        "model_type": "chat",
        "api_key_env": "ANTHROPIC_API_KEY"
      },
      {
        "name": "gemini-ultra",
        "organization": "google",
        "model_type": "chat",
        "api_key_env": "GOOGLE_API_KEY"
      },
      {
        "name": "llama-2-70b-chat",
        "organization": "meta",
        "model_type": "hf-causal",
        "local": true
      }
    ],

    "comparison_tasks": [
      "hellaswag",
      "arc_challenge",
      "gsm8k",
      "humaneval",
      "mmlu",
      "quaternion_algebra",
      "fractal_analysis",
      "wave_physics"
    ],

    "statistical_analysis": {
      "confidence_intervals": true,
      "significance_testing": true,
      "effect_size_analysis": true,
      "bootstrap_iterations": 10000
    }
  },

  "execution_environment": {
    "device_selection": {
      "auto_detect": true,
      "prefer_gpu": true,
      "fallback_cpu": true,
      "mixed_precision": true
    },

    "performance_optimization": {
      "batch_processing": true,
      "parallel_evaluation": true,
      "memory_optimization": true,
      "gradient_checkpointing": false,
      "model_sharding": false
    },

    "resource_limits": {
      "max_memory_gb": 16,
      "max_processing_time_seconds": 3600,
      "max_concurrent_requests": 4,
      "timeout_per_request": 300
    }
  },

  "output_configuration": {
    "results_directory": "./evaluation_results",
    "save_intermediate_outputs": true,
    "generate_detailed_reports": true,

    "report_formats": [
      "json",
      "csv",
      "html",
      "pdf"
    ],

    "visualization": {
      "generate_plots": true,
      "fractal_dimension_plots": true,
      "energy_conservation_charts": true,
      "performance_comparison_graphs": true,
      "quaternion_stability_analysis": true
    },

    "metadata": {
      "include_system_info": true,
      "include_model_config": true,
      "include_evaluation_params": true,
      "include_timing_info": true,
      "include_error_logs": true
    }
  },

  "validation_and_quality": {
    "mathematical_validation": {
      "energy_conservation_check": true,
      "quaternion_norm_validation": true,
      "spectral_coherence_verification": true,
      "wave_parameter_consistency": true
    },

    "quality_thresholds": {
      "min_accuracy": 0.3,
      "min_energy_conservation": 0.7,
      "min_quaternion_stability": 0.6,
      "min_processing_speed_tokens_per_sec": 5.0
    },

    "error_handling": {
      "max_retries": 3,
      "retry_delay_seconds": 5.0,
      "graceful_degradation": true,
      "log_all_errors": true,
      "continue_on_failure": true
    }
  },

  "experimental_features": {
    "quantum_computing_preparation": {
      "enable": false,
      "quantum_state_mapping": false,
      "quantum_gate_simulation": false
    },

    "multimodal_support": {
      "enable": false,
      "image_processing": false,
      "audio_processing": false,
      "video_processing": false
    },

    "advanced_analysis": {
      "gradient_flow_analysis": false,
      "attention_pattern_analysis": false,
      "layer_wise_analysis": false,
      "ablation_studies": false
    },

    "real_time_processing": {
      "enable": false,
      "streaming_evaluation": false,
      "live_monitoring": false
    }
  },

  "integration_apis": {
    "helm": {
      "client_class": "PSIQRHHELMClient",
      "config_file": "helm_config.yaml",
      "cache_enabled": true,
      "request_timeout": 300
    },

    "lm_eval": {
      "model_class": "PSIQRHLMEvalModel",
      "config_file": "lm_eval_config.yaml",
      "registration_name": "psiqrh",
      "batch_size": 1
    }
  },

  "logging_and_debugging": {
    "log_level": "INFO",
    "log_file": "./logs/psiqrh_evaluation.log",
    "console_output": true,

    "debug_options": {
      "log_quaternion_operations": false,
      "log_fractal_analysis": false,
      "log_spectral_filtering": false,
      "log_energy_conservation": true,
      "log_performance_metrics": true,
      "log_intermediate_states": false
    }
  },

  "custom_datasets": {
    "quaternion_algebra_dataset": {
      "path": "./datasets/quaternion_problems.json",
      "description": "Mathematical problems involving quaternion algebra",
      "size": 500,
      "difficulty_levels": ["basic", "intermediate", "advanced"]
    },

    "fractal_analysis_dataset": {
      "path": "./datasets/fractal_problems.json",
      "description": "Problems involving fractal dimension analysis",
      "size": 200,
      "fractal_types": ["cantor_set", "sierpinski_triangle", "mandelbrot_set"]
    },

    "wave_physics_dataset": {
      "path": "./datasets/wave_physics_problems.json",
      "description": "Physics problems involving wave equations",
      "size": 300,
      "topics": ["harmonic_oscillation", "wave_propagation", "interference"]
    }
  },

  "security_and_privacy": {
    "api_key_handling": {
      "use_environment_variables": true,
      "encrypt_stored_keys": false,
      "key_rotation": false
    },

    "data_protection": {
      "anonymize_outputs": false,
      "secure_logging": true,
      "data_retention_days": 90
    }
  }
}